{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*",
    "test/**/*",
    "build.config.ts"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib/",
    "paths": {
      "@common/*": [
        "./src/common/*.ts"
      ],
      "@core/*": [
        "./src/core/*.ts"
      ],
      "@api/*": [
        "./src/api/*.ts"
      ]
    }
  }
}